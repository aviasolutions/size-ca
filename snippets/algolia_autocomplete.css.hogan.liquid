/* Collections, Articles & Pages */
.aa-without-collections .aa-collections {
  display: none;
}

.aa-without-articles .aa-articles {
  display: none;
}

.aa-without-pages .aa-pages {
  display: none;
}

.aa-collection {
	color: #fff;
	padding: 5px 5px 5px 0;
	display: inline-block;
}

.grid__item .aa-product-title {
	color: #fff;
}

.aa-collection:hover, .grid__item .aa-product:hover .aa-product-title {
	color: #ff6009;
}

.dataset-collections .grid__item {
	padding: 0;
	float: none;
	width: 100%;
}

.dataset-collections .grid-uniform {
	margin-left: 0;
}

.toggle-text {
	min-height: 1em;
	position: relative;
	display: inline-block;
}

.toggle-text__item {
	position: absolute;
	top: 50%;
	transform: translateY(-50%);
	left: 0;
	opacity: 0;
	transition: all 0.5s;
	white-space: nowrap;
}

.toggle-text__item:nth-child(1) {
	opacity: 1;
}

.toggle-text--toggled .toggle-text__item:nth-child(1) {
	opacity: 0;
}

.toggle-text--toggled .toggle-text__item:nth-child(2) {
	opacity: 1;
}

.aa-product { display: block; }

.aa-footer-link {
	color: #fff;
	display: flex;
	align-items: center;
	margin-top: 30px;
}

.aa-footer-link svg {
	margin-left: 10px;
}

.aa-footer-link::hover {
	color: #ff6009;
}
                </div>
              {% comment %}
                <div class="collection-products--count">
                  	{% assign p_count = search.results | size  %}
                    {{ paginate.items | json }} Results found
                </div>
             {% endcomment %}
            </div>
  		</div>
          
          	{%- comment -%} :: Products Wrapper :: {%- endcomment -%}
            <div class="grid-uniform collection_product_wrapper"></div>
          
          	{%- comment -%} :: LoadMore : Infinite :: {%- endcomment -%}
          	{% if settings.loadmore_type == 'infinite' %}
              <div class="products-loadmore">
                <img src="{{- 'ajax-loader.gif' | file_url -}}" alt="loader" />
              </div>
          	{% endif %}
          
          	{%- comment -%} :: Pagination :: {%- endcomment -%}
          	{% if paginate.pages > 1 and settings.loadmore_type == 'pagination' %}
              <hr />

              <div class="pagination-wrapper">
                <ul>
                  <li class="prev hideme">→</li>
                  <li class="page current">{{- paginate.current_page -}}</li>
                  <li class="separator">/</li>
                  <li class="page total">{{- paginate.pages -}}</li>
                  <li class="next">→</li>
                </ul>
              </div>
    		{% endif %}
          

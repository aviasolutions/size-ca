  </div>
  {% endif %}
  
  {% comment %}
  
  {% if section.settings.desc != blank %}
  <div class="btm_text text-center">
    {{ section.settings.desc }}
  </div>
  {% endif %}
  
  <div class="other_contact_way">
    {% if section.settings.contact_title != blank %}
    <h4>{{ section.settings.contact_title }}</h4>
    {% endif %}
    <ul>
      
      <li>
        <a href="{{ section.settings.help_link1 }}" target="_blank" class="help-box">
          
          {% if section.settings.help_icon1 != blank %}
          <span class="svg_icon">{{ section.settings.help_icon1 }}</span>
          {% endif %}
          
          {% if section.settings.help_text1 != blank %}
          <span class="help-box-text">{{ section.settings.help_text1 }}</span>
          {% endif %}
          
        </a>
      </li>
      
      <li>
        <a href="{{ section.settings.help_link2 }}" target="_blank" class="help-box">
          
          {% if section.settings.help_icon2 != blank %}
          <span class="svg_icon">{{ section.settings.help_icon2 }}</span>
          {% endif %}
          
          {% if section.settings.help_text2 != blank %}
          <span class="help-box-text">{{ section.settings.help_text2 }}</span>
          {% endif %}
          
        </a>
      </li>
      
    </ul>
  </div>
  
  {% endcomment %}
  
</div>



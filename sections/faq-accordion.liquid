 {% if section.blocks.size > 0 %}
<ul id="myUL" class="hide">
  {%- for block in section.blocks -%}   
    {% if block.settings.question != blank %}
  	 <li><a href="#" data-index="js_{{ forloop.index }}">{{ block.settings.question }}</a></li>
    {% endif %}
  {% endfor %}
</ul>
{% endif %}

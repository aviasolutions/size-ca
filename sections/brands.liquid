<div data-section-id="{{ section.id }}">
  <div class="wrapper">
    <div class="brand__flex">
      {% if section.settings.title != blank %}
      <h3>{{ section.settings.title }}</h3>
      {% endif %}
      {% if section.blocks.size > 0 %}
      <ul>
        {%- for block in section.blocks -%}
          {% if block.settings.heading != blank %}
          <li>
            <a href="{{ block.settings.brand_link }}">{{ block.settings.heading }}</a>
          </li>
          {% endif %}
        {%- endfor -%}
      </ul>
      {% endif %}
    </div>
  </div>
</div>

{% if section.settings.bg_color != blank %}
<style type="text/css">
  #shopify-section-{{ section.id }}{background-color:{{ section.settings.bg_color }};}
</style>
{% endif %}

{% schema %}
{
  "name": "Brands",
  "class": "index-section index-section--brands",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Brands"
    },
	{
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#000"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Brand",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "url",
          "id": "brand_link",
          "label": "Brand link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Brands",
      "category": "text",
      "blocks": [
        {
          "type": "text"
        },
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema %}
